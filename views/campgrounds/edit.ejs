<h1 align="center"> Edit the <%=campgrounds.name%> campground</h1>
<div class="row" style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" value="<%=campgrounds.name%>" type="text" name="name">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%=campgrounds.description%>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campgrounds.location %>">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" value="<%=campgrounds.price%>" id="price" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                <a href="/campgrounds">Go Back</a>
            </div>
        </form>
</div>




