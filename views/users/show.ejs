<% include ../partials/header %>

<div class="row">
    <div class="col-md-3">
        <div class="card" align="center" style="padding: 2px;">
            <h4><%=user.firstName+""+user.lastName%></h4>
            <img style="height: 250px; width: 250px"src="<%=user.avatar%>" alt="Image not available">
